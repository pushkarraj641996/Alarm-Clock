<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="FloatingAddAlarmButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/alarm_add_properties</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">999dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="button_general" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:background">@drawable/button_general</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@null</item>
        <item name="iconPadding">8dp</item>
        <item name="android:fontFamily">@font/button_font</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="button_add_new_alarm" parent="button_general">
        <item name="icon">@drawable/ic__add_new_alarm</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
    </style>

    <style name="button_cancel_dialog" parent="button_general">
        <item name="icon">@drawable/ic__cancel_dialog</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
    </style>

    <style name="button_save_dialog" parent="button_general">
        <item name="icon">@drawable/ic__save</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
    </style>

    <style name="editText_general" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/fragment_layout</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>
    <style name="alarm_off_button" parent="button_general">
        <item name="icon">@drawable/ic__stop_alarm</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

</resources>